<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--<ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="20dp"
        android:id="@+id/iv_cat_image"/>-->
    <TextView
        android:id="@+id/tv_cat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="4dp"
        android:textAlignment="center"
        android:text="Hello"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_news_count"
        android:layout_below="@+id/tv_cat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:paddingLeft="4dp"
        android:textAlignment="center"
        android:text=""
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_label"
        android:layout_below="@+id/tv_cat_name"
        android:layout_toRightOf="@+id/tv_news_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:paddingLeft="4dp"
        android:textAlignment="center"
        android:text=""
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_switch_label"
            android:text="Publish"
            android:padding="12dp"
            android:textSize="16sp"/>
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch_publish_cat"
            android:padding="12dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_below="@+id/tv_news_count"
        android:background="@drawable/toolbar_dropshadow"/>

</RelativeLayout>

